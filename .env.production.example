# Application
NODE_ENV=production
PORT=4000

# Database
DATABASE_URL=postgres://postgres:strong_password@postgres:5432/perpetua
POSTGRES_USER=postgres
POSTGRES_PASSWORD=strong_password
POSTGRES_DB=perpetua

# Redis
REDIS_URL=redis://redis:6379
REDIS_PASSWORD=strong_redis_password

# JWT
JWT_SECRET=your_strong_jwt_secret_key
JWT_EXPIRES_IN=7d

# Solana
SOLANA_RPC_URL=https://api.mainnet-beta.solana.com
SOLANA_NETWORK=mainnet-beta
PROGRAM_ID=your_program_id

# Frontend
REACT_APP_API_URL=https://api.perpetua.ltd
REACT_APP_SOLANA_NETWORK=mainnet-beta

# AWS S3
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=perpetua-production

# IPFS
IPFS_API_URL=https://ipfs.infura.io:5001
IPFS_API_KEY=your_ipfs_api_key
IPFS_API_SECRET=your_ipfs_api_secret

# Email
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your_smtp_user
SMTP_PASSWORD=your_smtp_password
EMAIL_FROM=noreply@perpetua.ltd

# KYC/AML Provider
KYC_PROVIDER_API_KEY=your_kyc_provider_api_key
KYC_PROVIDER_URL=https://api.kyc-provider.com

# Analytics
ANALYTICS_API_KEY=your_analytics_api_key

# Security
CORS_ORIGIN=https://perpetua.ltd
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX=100 